    },
    "map_grid": {
      "title": "map_grid",
      "$ref": "#/definitions/map_grid"
    },
    "map_label": {
      "title": "map_label",
      "$ref": "#/definitions/map_label"
    }
  },
  "dependencies": {},
  "definitions": {
    "map_coastline": {
